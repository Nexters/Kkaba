<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="100"
    android:background="#a0000000" >

<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="0dp" 
    android:layout_weight="60"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    android:orientation="vertical"
    android:weightSum="100"
    android:background="@drawable/dialog_rps_background">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:text="가위바위보를 선택해주세요"
        android:gravity="center_horizontal"
        android:textSize="10pt"
        android:textStyle="bold"
        android:textColor="#000000"/>
   
   <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"/>
 
 	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50"
        android:orientation="vertical"
        android:weightSum="100">
	<LinearLayout
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_weight="50"
         android:orientation="horizontal"
         android:weightSum="100">
         <ImageView
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_weight="35"/>
     <ToggleButton
                    android:id="@+id/rpsDialogPaperButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="30"
                    android:background="@drawable/paper_selector_bg"
                    android:textOff=""
                    android:textOn=""/>
      <ImageView
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_weight="35"/>
     </LinearLayout>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_weight="50"
         android:orientation="horizontal"
         android:weightSum="100">
      <ImageView
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_weight="10"/>
      <ToggleButton
                    android:id="@+id/rpsDialogScissorsButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="30"
                    android:background="@drawable/scissor_selector_bg"
                    android:textOff=""
                    android:textOn=""/>
        <ImageView
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_weight="20"/>
       <ToggleButton
                    android:id="@+id/rpsDialogRockButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="30"
                    android:background="@drawable/rock_selector_bg"
                    android:textOff=""
                    android:textOn=""/>
       <ImageView
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_weight="8"/>
       </LinearLayout>
    </LinearLayout>
     <EditText 
        android:id="@+id/rpsDialogEditText"
        android:layout_width="match_parent"
        android:layout_height="0dp" 
        android:layout_weight="10"
        android:hint="메세지를 입력하세요"
        android:textColor="#333333"
        android:ems="10"/>
     <ImageView
        android:id="@+id/blank"
        android:layout_width="match_parent"
        android:layout_height="0dp" 
        android:layout_weight="7"
        android:visibility="gone"/>"
     <TextView 
         android:id="@+id/rpsDialogTextView"
         android:layout_width="match_parent"
         android:layout_height="0dp" 
         android:layout_weight="3"/>
    
      <TextView
        android:id="@+id/decision"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:gravity="center"
        android:text="좋아! 너로 결정했어! 〉"
        android:textSize="13pt"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:background="@drawable/dialog_rps_background2"/>
      
</LinearLayout>
</LinearLayout>
